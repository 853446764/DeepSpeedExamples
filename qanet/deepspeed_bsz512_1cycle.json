{
  "train_batch_size": 512,
  "gradient_accumulation_steps": 1,
  "steps_per_print": 10,
  "optimizer": {
    "type": "Adam",
    "params": {
      "lr": 0.001,
      "betas": [
        0.8,
        0.999
      ],
      "eps": 1e-8,
      "weight_decay": 3e-7
    }
  },
 "scheduler": {
	"type": "OneCycle",
	"params": {
	    "cycle_min_lr": 0.004,
	    "cycle_max_lr": 0.015,
	    "cycle_first_step_size": 1000,
	    "cycle_second_step_size": 100,
	    "cycle_first_stair_count": 100,
	    "cycle_second_stair_count": 100,
	    "decay_step_size": 1000,
	    "decay_lr_rate": 0.01
	}
  }

}
